@model List<CarritoDetalle>

@{
    ViewData["Title"] = "Mi Carrito";
}

<h2>Mi Carrito</h2>

@if (TempData["Mensaje"] != null)
{
    <div class="alert alert-info">
        @TempData["Mensaje"]
    </div>
}

@if (TempData["Error"] != null)
{
    <div class="alert alert-danger">
        @TempData["Error"]
    </div>
}

<table class="table">
    <thead>
        <tr>
            <th>Producto</th>
            <th>Cantidad</th>
            <th>Precio Unitario</th>
            <th>Total</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Producto.Nombre</td>
                <td>@item.Cantidad</td>
                <td>@item.PrecioProducto</td>
                <td>@(item.Cantidad * item.PrecioProducto)</td>
                <td>
                    <form method="post" action="@Url.Action("AgregarAlCarrito", "Carrito")">
                        <input type="hidden" name="idProducto" value="@item.IdProducto" />
                        <button type="submit" class="btn btn-primary">Agregar más</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>
