@model CarritoCompras.ViewModels.LoginViewModel

@{
    ViewData["Title"] = "Iniciar Sesión";
}

<div class="login-page">
    <div class="container d-flex justify-content-center align-items-center">
        <div class="row w-100">
            <div class="col-md-6 col-lg-4 mx-auto">
                <div class="card shadow-lg border-0 rounded">
                    <div class="card-body p-5">
                        <h2 class="text-center mb-4 text-success animate__animated animate__fadeIn">@ViewData["Title"]</h2>

                        <!-- Mostrar los errores de validación -->
                        @if (!ViewData.ModelState.IsValid)
                        {
                                <div class="alert alert-danger">
                                    <ul class="mb-0">
                                    @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
                                    {
                                                <li>@error.ErrorMessage</li>
                                    }
                                    </ul>
                                </div>
                        }

                        <form asp-action="Login" method="post" class="animate__animated animate__fadeIn animate__delay-1s">
                            <!-- Campo Correo -->
                            <div class="form-group mb-4">
                                <label asp-for="Correo" class="form-label fs-5">Correo Electrónico</label>
                                <div class="input-group">
                                    <span class="input-group-text bg-success text-white"><i class="fas fa-envelope"></i></span>
                                    <input class="form-control fs-5 py-3" placeholder="Introduce tu correo" type="email" autocomplete="username" 
                                           data-val="true" data-val-email="El correo no es válido, ingrese uno válido de nuevo." 
                                           data-val-required="El correo es obligatorio" id="Correo" name="Correo" value="@Model.Correo" />
                                </div>
                                <span asp-validation-for="Correo" class="text-danger"></span>
                            </div>

                            <!-- Campo Contraseña -->
                            <div class="form-group mb-4 position-relative">
                                <label for="Contrasenia" class="form-label fs-5">Contraseña</label>
                                <div class="input-group">
                                    <input type="password" id="password" name="Contrasenia" class="form-control fs-5 py-3" 
                                           placeholder="Introduce tu contraseña" autocomplete="current-password" />
                                </div>
                                <span asp-validation-for="Contrasenia" class="text-danger"></span>
                            </div>

                            <!-- Botón de Iniciar Sesión -->
                            <div class="d-grid gap-2">
                                <button type="submit" class="btn btn-success btn-lg py-3 fs-4">
                                    <i class="fas fa-sign-in-alt"></i> Iniciar Sesión
                                </button>
                            </div>
                        </form>

                        <div class="text-center mt-4">
                            <p class="fs-5">¿No tienes cuenta? <a href="#" class="text-success">Regístrate aquí</a></p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
