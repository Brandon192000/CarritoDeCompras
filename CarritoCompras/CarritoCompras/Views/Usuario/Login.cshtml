@model CarritoCompras.ViewModels.LoginViewModel

@{
    ViewData["Title"] = "Iniciar Sesión";
}

<h2>@ViewData["Title"]</h2>

<form asp-action="Login" method="post">

    <div class="form-group">

        <label asp-for="Correo"></label>
        <input asp-for="Correo" class="form-control" />
        <span asp-validation-for="Correo" class="text-danger"></span>

    </div>

    <div class="form-group">

        <label asp-for="Contrasenia"></label>
        <input asp-for="Contrasenia" class="form-control" type="password" />
        <span asp-validation-for="Contrasenia" class="text-danger"></span>

    </div>

    <button type="submit" class="btn btn-primary">Iniciar Sesión</button>

</form>

@section Scripts {

    @await Html.PartialAsync("_ValidationScriptsPartial")

}
